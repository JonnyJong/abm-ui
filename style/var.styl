[ui-scheme='light']
	{SchemeLight}

[ui-scheme='dark']
	{SchemeDark}

[ui-scheme='system']
body
	@extend [ui-scheme='light']

@media (prefers-color-scheme dark)
	[ui-scheme='system']
	body
		{SchemeDark}
