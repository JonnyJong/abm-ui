*
	box-sizing border-box

body
	overflow hidden
	margin 0
	width 100vw
	height 100vh
	background var(--bg)
	color var(--text)
	font 16px / 1.5 system-ui
	user-select none

::selection
	background var(--theme)
	color var(--theme-text)

h1
h2
h3
h4
h5
h6
	margin 0
	font-weight 400

h1
	font-size 57px
	line-height 64px

h2
	font-size 45px
	line-height 52px

h3
	font-size 36px
	line-height 44px

h4
	font-size 32px
	line-height 40px

h5
	font-size 28px
	line-height 36px

h6
	font-size 24px
	line-height 32px

.ui-preset-fullscreen
	position fixed
	z-index 50
	width 100%
	height 100%
	inset 0
