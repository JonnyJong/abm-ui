w-slider
	display block

.w-slider
	position relative
	width 100%
	height 24px
	&[ui-hover]
		.w-slider-thumb
			border-width 4px
	&:active
		.w-slider-thumb
			border-width 2px
			scale .8

.w-slider-track
	position absolute
	top 9px
	left 9px
	overflow hidden
	width calc(100% - 18px)
	height 6px
	border-radius 100vmax
	background var(--w-slider-track)

.w-slider-cover
	position relative
	top 0
	left 0
	width var(--w-slider-value)
	height 100%
	border-radius 100vmax
	background var(--w-slider-cover)
	transition .1s width

.w-slider-thumb
	position absolute
	top 0
	left var(--w-slider-value)
	width 24px
	height 100%
	border 2px solid var(--w-slider-thumb-border)
	border-radius 100%
	background var(--w-slider-thumb)
	transition .1s translate, .1s left, .1s border-width, .1s scale
	translate calc(var(--w-slider-value) * -1) 0

.w-slider-draging
	.w-slider-cover
		transition none
	.w-slider-thumb
		transition .1s border-width, .1s scale

