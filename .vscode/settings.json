{
	"typescript.tsdk": "./node_modules/typescript/lib",
	// Auto Compile
	"task.autoDetect": "off",
	// Test
	"liveServer.settings.root": "/",
	"liveServer.settings.wait": 1000,
	// Write
  "editor.insertSpaces": false,
  "files.eol": "\n",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		}
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
	// Stylus
	"[stylus]": {
		"editor.defaultFormatter": "thisismanta.stylus-supremacy",
		"editor.formatOnType": false
	},
	"languageStylus.useSeparator": false,
	"stylusSupremacy.insertColons": false,
	"stylusSupremacy.insertSemicolons": false,
	"stylusSupremacy.insertBraces": false,
	"stylusSupremacy.insertNewLineAroundBlocks": "root",
	"stylusSupremacy.preserveNewLinesBetweenPropertyValues": true,
	"stylusSupremacy.insertParenthesisAroundIfCondition": false,
	"stylusSupremacy.insertLeadingZeroBeforeFraction": false,
	"stylusSupremacy.selectorSeparator": "\n",
	/*
		Copy from https://github.com/SimenB/stylint/blob/master/src/data/ordering.json
		Fix: Added ‘all’ property to the beginning of the sortOrder
			to properly override browser defaults before other styles are applied
	*/
